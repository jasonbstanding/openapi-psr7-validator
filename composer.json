{
    "name": "lezhnev74/openapi-psr7-validator",
    "description": "Validate PSR-7 messages against OpenAPI (3.0.2) specifications \nexpressed in YAML or JSON",
    "keywords": [
        "OpenAPI",
        "psr7",
        "http",
        "validation"
    ],
    "homepage": "https://github.com/lezhnev74/openapi-psr7-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Lezhnev",
            "email": "lezhnev.work@gmail.com",
            "homepage": "https://lessthan12ms.com",
            "role": "Developer"
        }
    ],
    "type": "library",
    "autoload": {
        "psr-4": {
            "OpenAPIValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenAPIValidationTests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "cebe/php-openapi": "dev-fix-path-referencing",
        "psr/cache": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "respect/validation": "^1.1"
    },
    "require-dev": {
        "cache/array-adapter": "^1.0",
        "doctrine/coding-standard": "^6.0",
        "guzzlehttp/psr7": "^1.5",
        "phpunit/phpunit": "^7|^8"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jasonbstanding/php-openapi"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
